}
<div class="row">
    @if (Model.Type == "Mobile Phone" || Model.Type == "Tablet Computer")
    {
        <h6 class="mt-2">The Color Of Product:</h6>
        <div class="row mt-1 ml-2">
            <input type="radio" class="btn-check ml-4" name="options" id="option" autocomplete="off" value="Black">
