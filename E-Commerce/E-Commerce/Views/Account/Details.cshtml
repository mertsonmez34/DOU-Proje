@using E_Commerce.Entity
@using System.Globalization;
@using E_Commerce.Controllers;
@model E_Commerce.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";

    AccountController accountController = ((AccountController)this.ViewContext.Controller);

}

<div class="container-fluid mt-5">
    <div class="row">
        @Html.Partial("_AccountList")
        <div class="col-md-8">

            <h2>Order Detail Informations</h2>
            <hr />

            <dl class="row">

                <dt class="col-sm-3">Order Status</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == EnumOrderState.Waiting)
                    {
                        <span class="badge-warning">Waiting for Approval</span>
                    }
                    else if (Model.OrderState == EnumOrderState.Completed)
                    {
                        <span class="badge-success">Order Completed</span>
                    }
                    else if (Model.OrderState == EnumOrderState.Canceled)
                    {
                        <span class="badge-danger">Order Canceled</span>
                    }
                </dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">
                    @Model.Total.ToString("c", new CultureInfo("tr-TR"))
                </dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>


                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">
                    @Model.AddressName
                    <hr />
                    @Model.Address
                    <br />
                    @Model.City - @Model.District - @Model.Neighborhood
                    <br />
                    @Model.PostalCode
                </dd>

                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered">

                        <thead>
                            <tr>
                                <th>Image</th>
                                <th style="width: 45%;">Product Name</th>
                                <th>Chosen Option</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th style="width: 10%;"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Orderlines)
                            {
                            <tr>
                                <td>
                                    <img src="@item.Image" width="70" />
                                </td>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>
                                    @item.ChosenOption
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.Price.ToString("c", new CultureInfo("tr-TR"))
                                </td>
                                <td>
                                    <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                        Product Details
                                    </a>
                                    <div style="height:10px"></div>

                                    @if (accountController.isAlreadyReviewed(item.ProductId))
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                            Already Commented
                                        </button>
                                    }
                                    else
                                    {
                                        <a href="/Review/Create/@item.ProductId" class="btn btn-primary btn-sm">
                                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                            Write Comment
                                        </a>
                                    }

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </dd>

            </dl>

        </div>
    </div>
</div>
